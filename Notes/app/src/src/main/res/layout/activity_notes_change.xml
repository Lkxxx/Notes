<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.lk.myapp.EditNoteActivity">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightseagreen"
        android:minHeight="?attr/actionBarSize"
        android:title="   Lalala"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        >


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"
        android:hint="写下你的标题"
        android:background="#eee"
        android:paddingEnd="20dp"

        android:textColor="#ff2ebe78"
        android:textColorHint="#ff989898" />

    <View
        android:layout_below="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ff8a8a8a"
        android:layout_marginLeft="10dp"
        android:id="@+id/view_view"/>

    <EditText
        android:layout_below="@+id/view_view"
        android:id="@+id/et_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"

        android:layout_marginTop="10dp"
        android:background="#eee"
        android:hint="写下你的笔记"

        android:textColor="#000"
        android:textColorHint="#ff989898" />
    </RelativeLayout>
</LinearLayout>
