<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lk.notes.MessageActivity"
    android:orientation="vertical"
    android:background="#fff"
    android:textColor="#ff575757">

    <include layout="@layout/toolbar" />
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:id="@+id/iv_launcher"
        />
    <TextView
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简记 1.15"
        android:textColor="#ff575757"/>
    <TextView
        android:layout_gravity="center"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="做简单轻松的记录"
        android:textColor="#ff898989"/>



    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="感谢以下开源项目："
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Android"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="FloatingActionButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="PullTozoom"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DateTimePicker"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="WaveView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ScrimInsetsFrameLayout"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="致谢："
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="XXXXL  "/>

    <TextView
        android:background="@drawable/button_transparent"
        android:id="@+id/tv_GitHub"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="GitHub "
        android:textSize="16sp"
        android:gravity="center"
        android:clickable="true"/>

</LinearLayout>
