<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:theme="@style/AlertDialog.AppCompat.Light">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义"
        android:textSize="18sp"

        android:textColor="#ff5b5b5b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp">

    <EditText
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/dialog_text_R"
        android:textColor="#ff5b5b5b"
        android:inputType="number"
        android:layout_marginLeft="15dp"
        android:hint="R(0-255)"/>

    <EditText
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/dialog_text_G"
        android:textColor="#ff5b5b5b"
        android:inputType="number"
        android:layout_marginLeft="15dp"
        android:hint="G(0-255)"/>

    <EditText
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/dialog_text_B"
        android:textColor="#ff5b5b5b"
        android:inputType="number"
        android:layout_marginLeft="15dp"
        android:hint="B(0-255)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_buttoncancel"
        android:background="@drawable/button_bordless_bg_material"
        android:text="取消"
        android:alpha="30"
        android:textColor="@color/lightseagreen"/>
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:id="@+id/dialog_buttonconfirm"
        android:text="确认"
        android:background="@drawable/button_bordless_bg_material"
        android:alpha="1"
        android:textColor="@color/lightseagreen"/>
    </LinearLayout>

</LinearLayout>