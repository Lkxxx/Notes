<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@color/darkcyan</item>
        <item name="android:toolbarStyle">@style/MyToolBar</item>
        <item name="android:colorPrimary">#eee</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:navigationBarColor">@color/lightseagreen</item>

    </style>



    <style name="MyToolBar" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:titleTextStyle">@style/MyToolBarTitleText</item>
        <item name="android:backgroundStacked">@android:color/holo_green_dark</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle.Light</item>
    </style>

    <style name="OverflowStyle.Light" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="MyToolBarTitleText">

        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <!--<item name="android:windowTitleSize">50dp</item>-->

    </style>

    <style name="MyTitleTextAppearance">

    </style>

    <style name="add_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@null</item>
        <!-- 边框 -->

        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="fabShadow">
        <item name="android:shadowColor">#5e5e5e</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--抽屉开关箭头颜色-->
        <item name="color">@android:color/white</item>
    </style>

    <style name="WaveTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
