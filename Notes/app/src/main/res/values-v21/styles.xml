<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:statusBarColor">@color/darkcyan</item>
        <item name="android:toolbarStyle">@style/MyToolBar</item>
        <item name="android:colorPrimary">@color/lightseagreen</item>
        <item name="android:navigationBarColor">@color/lightseagreen</item>

    </style>




    <style name="MyToolBar" >
        <item name="android:background">@color/background_button</item>
        <item name="android:titleTextStyle">@style/MyToolBarTitleText</item>
        <item name="android:backgroundStacked">@android:color/holo_green_dark</item>

    </style>

    <style name="MyToolBarTitleText" >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <!--<item name="android:windowTitleSize">50dp</item>-->

    </style>
    <style name="MyTitleTextAppearance">
        
    </style>

    <style name="add_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@null</item><!-- 边框 -->

        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
    </style>
</resources>
